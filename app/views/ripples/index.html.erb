<p id="notice"><%= notice %></p>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Message</th>
      <th>Posted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ripples.each do |ripple| %>
      <tr>
        <%if ripple.website.nil? || ripple.website.empty?%>   
        <td><%= ripple.name %></td>       
       <%else %>
         <td><a href="//<%=ripple.website%>"><%= ripple.name %></a></td>
       <%end%>
        <td class= "tdMessage"><%= ripple.message %></td>
        <td><%= ripple.created_at %></td>

        <td><%= link_to 'Show', ripple %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Newest', ripples_path(page: "newest") %>
<%= link_to 'Previous 10 Ripples', ripples_path(page: "prev") %>
<%= link_to 'Next 10 Ripples', ripples_path(page: "next") %>
<%= link_to 'Oldest', ripples_path(page: "oldest") %>
<%= link_to 'New Ripple', new_ripple_path %>
